<h2><%= I18n.t('authy.verify_installation.title', {:scope => 'devise'}) %></h2>

<%= verify_authy_installation_form do %>
    <legend><%= I18n.t('authy.submit.token_title', {:scope => 'devise'}) %></legend>
    <%= label_tag :token %>
    <%= text_field_tag :token, "", :autocomplete => :off, :id => 'authy-token' %>
    <% if false %>
        <%= authy_request_sms_link %>
    <% end %>
    <%= submit_tag I18n.t('authy.enable_my_account', {:scope => 'devise'}), :class => 'btn' %>
<% end %>

