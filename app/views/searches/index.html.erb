<div class='clearfix'>
	<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12 '>
		<h1><%= t('search.results')%></h1>
	</div>

	<div class='pull-right'>
		<%= paginate @searches %>
	</div>
	<div class="clearfix"></div>

	<% @searches.each do |course| %>
		<div class='col-lg-3 col-md-3 col-sm-4 col-xs-4 small'><%= render course %></div>
	<% end unless @searches.empty? %>

	<div class="clearfix"></div>
	<div class='pull-right'>
		<%= paginate @searches %>
	</div>
</div>
