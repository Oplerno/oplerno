%h1 Listing users
%table
  %thead
    %tr
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to 'Show', user, {class: 'btn btn-danger'}
        %td= link_to 'Edit', edit_user_path(user), {class: 'btn btn-danger'}
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, {class: 'btn btn-danger'}
%br/
= link_to 'New User', new_user_path, {class: 'btn btn-danger'}
