<h1 class="course_name"><%= @course.name %></h1>

<div class="col-xs-4 col-sm-4 col-md-4 col-lg-2 show">
	<%= render @course %>
</div>
<div class="col-xs-6 col-sm-6 col-md-6 col-lg-4"><%= @course.description %></div>
<%- teacher = Teacher.find(@course.teacher) unless @course.teacher.nil? %>
<%- unless teacher.nil? %>
    <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 small">
			<%= render teacher %>
    </div>
<% end %>

<div class="clearfix"></div>
<div class="row-fluid top5">
  <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2">
    <%= button_to t('courses.register'), add_course_to_cart(@course), {:disabled => !user_signed_in?|| !@course.active?, :class => "btn btn-danger"} %>
  </div>
  <div class="col-xs-6 col-xs-push-2 col-sm-1 col-md-1 col-lg-1">
    <%= link_to t('generic.back'), courses_path, {:class => "btn btn-default"} %>
  </div>
  <% if user_signed_in? && !teacher.nil? && teacher.id == current_user.id || true %>
      <div class="pull-right col-xs-3">
        <%= link_to t('generic.edit'), edit_course_path(@course), {:class => "btn btn-info"} %>
      </div>
  <% end %>
</div>

