<h1>Courses</h1>


<% @courses.each do |course| %>
    <div class="col-6 col-sm-6 col-lg-4">

      <div>
        <img width='256' height='256' src="/courses/<%= course.key %>.jpeg"/>
      </div>
      <div><%= course.name %></div>
      <div><%= link_to "View", course, {:class => "btn btn-default"} %></div>
    </div>
<% end unless @courses.empty? %>


<br>

<div class="clearfix"></div>
<% if user_signed_in? %>
    <%= link_to 'New Course', new_course_path, {:class => "btn btn-info pull-right"} if user_signed_in? %>
<% end %>
