<h1>Editing cart</h1>

<% @cart.courses.each do |course| %>
    <div class="col-6 col-sm-6 col-lg-4">

      <div>
        <img width='256' height='256' src="/courses/<%= course.key %>.jpeg"/>
      </div>
      <div><%= course.name %></div>
      <div><%= button_to "Remove", remove_course_from_cart(course), {:disabled => !logged_in?, :class => "btn btn-default"} %></div>
    </div>
<% end unless @cart.courses.empty? %>
<div class="clearfix"></div>


<%= link_to 'Show', @cart, {:class => "btn btn-info pull-left"} %> |
<%= link_to 'Back', carts_path, {:class => "btn btn-info pull-right"} %>
